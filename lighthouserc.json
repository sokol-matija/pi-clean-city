{
  "$schema": "https://raw.githubusercontent.com/nicolo-ribaudo/lighthouse-ci/main/packages/utils/src/lighthouserc-schema.json",
  "ci": {
    "collect": {
      "staticDistDir": "./dist",
      "numberOfRuns": 1,
      "settings": {
        "preset": "desktop",
        "chromeFlags": "--no-sandbox --headless --disable-dev-shm-usage",
        "skipAudits": ["screenshot-thumbnails"],
        "onlyCategories": ["accessibility", "best-practices", "seo"]
      }
    },
    "assert": {
      "assertions": {
        "categories:accessibility": ["error", { "minScore": 0.9 }],
        "categories:best-practices": ["error", { "minScore": 0.9 }],
        "categories:seo": ["warn", { "minScore": 0.85 }]
      }
    },
    "upload": {
      "target": "temporary-public-storage"
    }
  }
}
